<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#3ce7d3"
    >

    <TextView
        android:id="@+id/txtSuaCV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Sua Cong Viec"
        android:textSize="24sp" />

    <EditText
        android:hint="nhap ten cv"
        android:id="@+id/etSuaTenCV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSuaCV" />

    <Button
        android:id="@+id/btnSua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etSuaTenCV"
        android:layout_marginLeft="30dp"
        android:text="Sua" />

    <Button
        android:id="@+id/btnHuyEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etSuaTenCV"
        android:layout_marginRight="50dp"
        android:layout_toRightOf="@id/btnSua"
        android:text="Huy" />
</RelativeLayout>